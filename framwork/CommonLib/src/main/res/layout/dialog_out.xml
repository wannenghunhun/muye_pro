<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dip"
    android:layout_height="240dip"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:background="@drawable/button_cornor_white">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/icon_warning"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定把该人员离场吗？"
        android:textSize="15sp"
        android:textColor="@color/black_FF333333"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/dialog_success_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="离场之后需编辑人员信息方可返场？"
        android:textSize="13sp"
        android:textColor="@color/c_999999"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/setting_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_stoken_green"
            android:text="取消"
            android:textColor="@color/green_025F33"
            android:textSize="15sp" />

        <Button
            android:id="@+id/setting_btn_confirm"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_cornor"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>